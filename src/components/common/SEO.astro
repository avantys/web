---
interface Props {
  /** Page title */
  title: string;
  /** Page description */
  description: string;
  /** Optional canonical path */
  canonical?: string;
  /** Force noindex */
  noindex?: boolean;
  /** Open Graph image path */
  ogImage?: string;
  /** Twitter card type */
  twitterCard?: string;
}

const {
  title,
  description,
  canonical,
  noindex = false,
  ogImage,
  twitterCard = 'summary_large_image'
} = Astro.props as Props;

const SITE_URL = import.meta.env.SITE_URL || '';
const indexable = import.meta.env.PUBLIC_INDEXABLE === 'true';
const url = canonical
  ? new URL(canonical, SITE_URL).toString()
  : new URL(Astro.url.pathname, SITE_URL).toString();
const imageUrl = ogImage ? new URL(ogImage, SITE_URL).toString() : undefined;
const shouldIndex = indexable && !noindex;
---
<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={url} />
{!shouldIndex && <meta name="robots" content="noindex, nofollow" />}
<meta property="og:type" content="website" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={url} />
{imageUrl && <meta property="og:image" content={imageUrl} />}
<meta name="twitter:card" content={twitterCard} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
{imageUrl && <meta name="twitter:image" content={imageUrl} />}
---

